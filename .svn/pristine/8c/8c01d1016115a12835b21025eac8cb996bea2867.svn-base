/* 审批进度流程 */
.approval-progress{background: #F8F8F8;border: 1px solid #DFDFDF;padding: 10px 10px 0 100px;margin-top: 10px;}
.approval-progress li{position: relative;padding-left: 20px;}
.approval-progress li .time{font-size: 12px;color: #999;margin-left: 50px;}
.approval-progress li .status{color: #27AAE1;}
.approval-progress li.on .status{color: #F75C5C;}
.approval-progress li .status .reason{font-size: 12px;background: #E6E6E6;padding: 4px 8px;display: inline-block;margin-left: 20px;}
.approval-progress li.on:before{background: #F75C5C;}
.approval-progress li:before{content: '';position: absolute;width: 8px;height: 8px;background: #27AAE1;border-radius: 50%;left: 0;top: 5px;z-index: 2;}
.approval-progress li:last-child:after{display: none;}
.approval-progress li:after{content: '';position: absolute;width: 1px;height: 60px;background: #ccc;left: 3px;top: 10px;}
