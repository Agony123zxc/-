}

/*复选框*/
input[type=checkbox] {
    margin-right: 5px;
    width: 16px;
    height: 16px;
}

input[type=checkbox]:after {
    width: 100%;
    height: 100%;
    top: 0;
    content: " ";
    background-color: #fdfdfd;
    color: #000000;
    display: inline-block;
    visibility: visible;
    border-radius: 2px;
    border: 1px solid #cecece;
}

input[type=checkbox]:checked:after {
    content: "\2714";
    font-size: 12px;
    font-weight: bold;
    background-color: #F8A821;
    color: #fff;
    height: 16px;
    width: 16px;
    line-height: 17px;
    border: 1px solid #f8a821;
    padding-left: 2px;
}

